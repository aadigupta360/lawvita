<%- include('header') %><div class="max-w-6xl mx-auto px-4"><div class="flex justify-between items-center mb-8"><h1 class="text-3xl font-bold">Dashboard</h1><a href="/logout" class="text-red-400">Logout</a></div><div class="grid grid-cols-1 md:grid-cols-4 gap-8"><div class="glass p-6 h-fit"><h2 class="font-bold mb-1"><%= user.name %></h2><p class="text-xs text-gray-400"><%= user.email %></p></div><div class="md:col-span-3"><h2 class="text-xl font-bold mb-6">Library</h2><% if(myNotes.length===0){ %><div class="glass p-10 text-center"><p class="text-gray-400 mb-4">No notes yet.</p><a href="/store" class="btn btn-primary">Store</a></div><% }else{ %><div class="grid grid-cols-1 md:grid-cols-2 gap-4"><% myNotes.forEach(n=>{ %><div class="glass p-6 flex flex-col justify-between"><div><span class="text-xs text-pink-400 font-bold"><%= n.category %></span><h3 class="text-lg font-bold mt-1 mb-4"><%= n.title %></h3></div><% if(n.fileType==='file'){ %><a href="/read/<%= n.id %>" target="_blank" class="btn bg-green-600 text-white w-full text-center hover:bg-green-500">Read Now</a><% }else{ %><a href="<%= n.fileLink %>" target="_blank" class="btn bg-blue-600 text-white w-full text-center">Open Link</a><% } %></div><% }) %></div><% } %></div></div></div><%- include('footer') %>